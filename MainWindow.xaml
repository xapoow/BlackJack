<Window
    x:Class="BlackjackWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Blackjack"
    Width="1920"
    Height="1080"
    Background="#204020"
    Left="0"
    ResizeMode="NoResize"
    Top="0"
    WindowStyle="None">

    <Grid Margin="10">
        <Border
            Padding="15"
            Background="#306030"
            CornerRadius="15">
            <StackPanel VerticalAlignment="Stretch">
                <Canvas HorizontalAlignment="Center" Panel.ZIndex="100">

                    <TextBlock
                        x:Name="GameStatus"
                        Canvas.Left="-300"
                        Canvas.Top="300"
                        Margin="0,20"
                        FontSize="100"
                        Foreground="LightYellow" />

                    <StackPanel
                        Grid.Row="4"
                        Grid.Column="2"
                        Canvas.Left="-250"
                        Canvas.Top="500"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">

                        <Button
                            x:Name="StartButton"
                            Width="Auto"
                            Margin="0,0,10,0"
                            Padding="80,20"
                            Background="#40a040"
                            BorderBrush="DarkGreen"
                            BorderThickness="1"
                            Click="StartGame_Click"
                            Content="Start"
                            FontSize="48"
                            Foreground="White" />

                        <Button
                            x:Name="HitButton"
                            Width="Auto"
                            Margin="0,0,10,0"
                            Padding="80,20"
                            Background="#40a040"
                            BorderBrush="DarkGreen"
                            BorderThickness="1"
                            Click="Hit_Click"
                            Content="Hit"
                            FontSize="48"
                            Foreground="White"
                            Visibility="Collapsed" />

                        <Button
                            x:Name="StandButton"
                            Width="Auto"
                            Margin="0,0,10,0"
                            Padding="80,20"
                            Background="#40a040"
                            BorderBrush="DarkGreen"
                            BorderThickness="1"
                            Click="Stand_Click"
                            Content="Stand"
                            FontSize="48"
                            Foreground="White"
                            Visibility="Collapsed" />

                        <Button
                            x:Name="ExitButton"
                            Width="Auto"
                            Padding="80,20"
                            Background="#a03030"
                            BorderBrush="DarkRed"
                            BorderThickness="1"
                            Click="ExitButton_Click"
                            Content="Exit"
                            FontSize="48"
                            Foreground="White"
                            Visibility="Collapsed" />

                    </StackPanel>
                </Canvas>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>


                    <StackPanel Grid.Row="0" Grid.Column="1">

                        <TextBlock
                            Margin="0,10,0,0"
                            Padding="60,0"
                            FontSize="48"
                            Foreground="White"
                            Text="Dealer:" />

                        <TextBlock
                            x:Name="DealerScore"
                            Margin="0,10,60,0"
                            FontSize="48"
                            Foreground="LightYellow" />

                        <StackPanel
                            x:Name="DealerPanel"
                            Margin="0,10"
                            Orientation="Horizontal" />

                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0">

                        <TextBlock
                            Padding="60,0"
                            FontSize="48"
                            Foreground="White"
                            Text="Player:" />

                        <TextBlock
                            x:Name="PlayerScore"
                            Margin="60,10,0,0"
                            FontSize="48"
                            Foreground="LightYellow" />

                        <StackPanel
                            x:Name="PlayerPanel"
                            Margin="0,10"
                            Orientation="Horizontal" />

                    </StackPanel>

                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>
